<% layout("/layouts/boilerplate") -%>

<body>
  <div class="container mt-4 mb-4">
    <h1>All listings:</h1>

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 mt-3">
      <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col" style="width: 18rem;">
            <img src="<% if (listing.image && listing.image.data) { %>data:<%= listing.image.contentType %>;base64,<%= listing.image.data.toString('base64') %><% } else { %><%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %><% } %>"
              class="card-img-top listing-link"
              alt="listing image">
            <div class="card-body">
              <p class="card-text">
                <strong><%= listing.title %></strong><br>
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/Night.
              </p>
            </div>
          </div>
        </a>
      <% } %>
    </div>
  </div>
</body>
