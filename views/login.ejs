<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta-name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login - Spot4Stay</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-gray-100 flex items-center justify-center">
  <!-- Centered Card -->
  <div class="w-full max-w-4xl bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col md:flex-row">

    <!-- Left Image -->
    <div class="hidden md:block md:w-1/2">
      <img
        src="https://raw.githubusercontent.com/prebuiltui/prebuiltui/main/assets/login/leftSideImage.png"
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Right Form -->
    <div class="w-full md:w-1/2 flex items-center justify-center px-8 py-10">
      <form id="login-form" class="w-full max-w-sm">
        <h2 class="text-3xl font-semibold text-gray-900 text-center">Sign in</h2>
        <p class="mt-2 text-sm text-gray-500 text-center">
          Welcome back! Please sign in to continue
        </p>

        <!-- Google Button -->
        <button
          type="button"
          id="google-btn"
          class="w-full mt-8 bg-gray-100 flex items-center justify-center gap-2 h-11 rounded-full hover:bg-gray-200 transition"
        >
          <img
            src="https://raw.githubusercontent.com/prebuiltui/prebuiltui/main/assets/login/googleLogo.svg"
            class="w-5 h-5"
          />
          <span class="text-sm font-medium text-gray-700">Continue with Google</span>
        </button>

        <!-- Divider -->
        <div class="flex items-center gap-3 w-full my-6">
          <div class="flex-1 h-px bg-gray-300"></div>
          <p class="text-xs text-gray-500 whitespace-nowrap">or sign in with email</p>
          <div class="flex-1 h-px bg-gray-300"></div>
        </div>

        <!-- Email -->
        <label class="block text-xs font-medium text-gray-600 mb-1">Email</label>
        <input
          id="email"
          type="email"
          placeholder="Enter your email"
          class="w-full border border-gray-300 h-11 rounded-full px-4 text-sm outline-none"
          required
        />

        <!-- Password -->
        <label class="block text-xs font-medium text-gray-600 mt-4 mb-1">Password</label>
        <input
          id="password"
          type="password"
          placeholder="Enter your password"
          class="w-full border border-gray-300 h-11 rounded-full px-4 text-sm outline-none"
          required
        />

        <!-- Remember + Forgot -->
        <div class="flex items-center justify-between mt-4 text-gray-600 text-xs">
          <label class="flex items-center gap-2">
            <input type="checkbox" class="h-4 w-4" />
            Remember me
          </label>
          <a href="#" class="text-indigo-500 hover:underline">Forgot password?</a>
        </div>

        <!-- Login Button -->
        <button
          type="submit"
          class="mt-6 w-full h-11 rounded-full text-sm font-medium text-white bg-indigo-500 hover:bg-indigo-600 transition"
        >
          Login
        </button>

        <!-- Sign Up Link -->
        <p class="mt-4 text-xs text-center text-gray-500">
          Donâ€™t have an account?
          <a href="/signup" class="text-indigo-500 hover:underline">Sign up</a>
        </p>
      </form>
    </div>
  </div>

  <!-- Supabase + Auth Logic -->
  <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
  <script>
    // ðŸ”‘ Supabase credentials
    const supabaseUrl = "https://dopnzkxzdtuztxhhiouj.supabase.co";
    const supabaseAnonKey =
      "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImRvcG56a3h6ZHR1enR4aGhpb3VqIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQxMDM4ODUsImV4cCI6MjA3OTY3OTg4NX0._Lw0JIlolpPtNnDCT_5eQSuD7tQmsZ8t86O-70czas4";

    const { createClient } = supabase;
    const sb = createClient(supabaseUrl, supabaseAnonKey);

    const redirectURL = "https://stay-hub-topaz.vercel.app/listings";

    // ðŸ‘‰ Continue with Google
    document.getElementById("google-btn").addEventListener("click", async () => {
      const { error } = await sb.auth.signInWithOAuth({
        provider: "google",
        options: {
          redirectTo: redirectURL
        }
      });

      if (error) {
        alert(error.message);
        console.error(error);
      }
    });

    // ðŸ‘‰ Email + Password login
    document.getElementById("login-form").addEventListener("submit", async (e) => {
      e.preventDefault();

      const email = document.getElementById("email").value;
      const password = document.getElementById("password").value;

      const { error } = await sb.auth.signInWithPassword({ email, password });

      if (error) {
        alert(error.message);
        console.error(error);
      } else {
        window.location.href = redirectURL;
      }
    });
  </script>
</body>
</html>
